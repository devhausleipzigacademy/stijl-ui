{
  "name": "@devhaus/stijl-ui",
  "version": "0.0.10",
  "description": "Devhaus Leipzig Design System",
  "main": "./dist/cjs/stijl.js",
  "module": "./dist/esm/stijl.js",
  "types": "./dist/types/stijl.d.ts",
  "repository": "https://github.com/devhausleipzig/stijl-ui",
  "author": "Dan McAtee",
  "license": "MIT",
  "scripts": {
    "build": "node ./esbuild.build.js",
    "clean": "rimraf dist",
    "dev": "yarn clean && node ./esbuild.dev.js & yarn ts-types --watch",
    "format": "prettier --write \"./**/*.{ts,tsx}\"",
    "lint": "eslint --ext=ts,tsx .",
    "postbuild": "yarn ts-types",
    "postversion": "git push origin v$npm_package_version",
    "prebuild": "yarn clean",
    "prepack": "yarn build",
    "ts-types": "tsc --emitDeclarationOnly --outDir dist",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^18.6.1",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "esbuild": "^0.14.50",
    "esbuild-plugin-glob": "^2.1.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@radix-ui/colors": "^0.1.8",
    "@stitches/react": "^1.2.8",
    "framer-motion": "^6.5.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
